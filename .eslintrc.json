{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-var": "error",
    "no-unused-vars": "error",
    "semi": "error",
    "no-multi-spaces": "error",
    "space-in-parens": "error",
    "prefer-const": "error",
    "no-use-before-define": "error"
  }
}
